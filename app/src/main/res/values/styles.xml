<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/dividerColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/WINDOW_BACKGROUND</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorSecondary">@color/dividerColor</item>
        <item name="android:textColorTertiary">@color/black</item>
    </style>

    <style name="shareDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/CustDialogAnimation</item>
        <!-- 背景有灰度 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CustDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in_pic</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out_pic</item>
    </style>
    
    <style name="ChoosDateSt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="itemNumber">5</item>
        <item name="lineColor">#ffff6000</item>
        <item name="maskHight">32dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#777</item>
        <item name="normalTextSize">14sp</item>
        <item name="selecredTextColor">#ff000000</item>
        <item name="selecredTextSize">22sp</item>
        <item name="unitHight">50dp</item>
    </style>

    <style name="def_alert_dialog" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/CustDialogAnimation</item>
        <item name="android:width">150dp</item>
    </style>
</resources>
